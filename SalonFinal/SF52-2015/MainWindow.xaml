		<Button Content="Spisak termina" Name="spisakTerminaBtn" HorizontalAlignment="Left" Margin="204,34,0,0" VerticalAlignment="Top" Width="118" Grid.Row="1" Height="51" Grid.Column="1" Click="SpisakTerminaBtn_Click"/>
		<Button Content="Moj profil" Visibility="Hidden" Name ="mojProfilBtn" HorizontalAlignment="Left" Margin="179,93,0,0" VerticalAlignment="Top" Width="119" Height="59" Click="MojProfilBtn_Click"/>
		<Button Content="Dodaj termin" Visibility="Hidden" Name="dodajTerminRadnikMusterijaBtn" HorizontalAlignment="Left" Margin="360,93,0,0" VerticalAlignment="Top" Width="118" Height="59" Click="DodajTerminRadnikMusterijaBtn_Click" Grid.ColumnSpan="2"/>
		<Button Content="Automatski dodaj termin" Visibility="Hidden" Name="AutomatskiDodajTerminBtn" Grid.Column="1" HorizontalAlignment="Left" Margin="154,93,0,0" VerticalAlignment="Top" Width="150" Height="59" Click="AutomatskiDodajTermin_Click"/>
		<Label Content="SALON" HorizontalAlignment="Left" Margin="299,0,0,0" VerticalAlignment="Top" Height="88" Width="206" FontSize="40" FontWeight="Bold" FontStyle="Italic" FontFamily="Segoe Print" Grid.ColumnSpan="2"/>
		<Label Content="SALON" HorizontalAlignment="Left" Margin="310,130,0,0" VerticalAlignment="Top" Height="84" Width="412" FontSize="40" FontWeight="Bold" FontStyle="Italic" FontFamily="Segoe Print" Grid.ColumnSpan="2" Grid.Row="2"/>
	</Grid>
</Window>
