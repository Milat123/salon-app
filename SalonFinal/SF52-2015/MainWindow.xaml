	</Window.Background>
	<Grid Name="mainWindowGrid" Grid.Row="1" Grid.ColumnSpan="3" Visibility="Visible">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>

		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Button Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Height="43" Margin="22,10,0,0" VerticalAlignment="Top" Width="117" Click="Login_Click"/>
		<Button Content="Logout" Name="logoutBtn" Visibility="Visible" Click="LogoutBtn_Click" HorizontalAlignment="Left" Margin="174,28,0,0" VerticalAlignment="Top" Width="114" Grid.Row="0" Height="43" Grid.Column="1"/>
		<Button Content="Spisak korisnika" Name="spisakKorisnikaBtn" HorizontalAlignment="Left" Margin="40,34,0,0" VerticalAlignment="Top" Width="118" Grid.Row="1" Height="51" Click="SpisakKorisnikaBtn_Click"/>
		<Button Content="Spisak salona" Name="spisakSalonaBtn" HorizontalAlignment="Left" Margin="215,34.333,0,0" VerticalAlignment="Top" Width="118" Grid.Row="1" Height="51" Click="SpisakSalonaBtn_Click"/>
